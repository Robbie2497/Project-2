<form>
    <div class="container">

        <div class="form-group row">
            <div class="col-md-10">
                <input type="text" class="form-control" id="search" placeholder="Search for a movie" />
            </div>
            <div class="col-sm-2">
                <button type="submit" id="searchBtn" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>

</form>


<div class="container">
    <div class="row">
        <div class="col-md-7" id="resultRow">
        </div>

        {{!-- <div class="col-md-2">
            <button id="addFavorite" class="btn btn-primary">Add to favorites</button>
        </div> --}}


        <div class="col-md-5">
            <h1>Favorites:</h1>
            <table class="table table-responsive">
                <ul>
                    {{#each movies}}
                    <li>
                        <p>Title: {{this.title}}</p>
                        <p>Year Released: {{this.released}}</p>
                        <p>Rating: {{this.rating}}</p>
                        <button class="deleteBtn" data-id={{this.id}}>Delete</button> 
                    </li>
                    {{/each}}
                </ul>
            </table>
        </div>
    </div>
</div>



</div>


